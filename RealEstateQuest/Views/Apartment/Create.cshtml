@model RealEstateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Naujas NT</h1>

<h4>ApartmentModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ApartmentAddInformation.City" class="control-label"></label>
                <input asp-for="ApartmentAddInformation.City" class="form-control" />
                <span asp-validation-for="ApartmentAddInformation.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentAddInformation.Street" class="control-label"></label>
                <input asp-for="ApartmentAddInformation.Street" class="form-control" />
                <span asp-validation-for="ApartmentAddInformation.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentAddInformation.HouseNo" class="control-label"></label>
                <input asp-for="ApartmentAddInformation.HouseNo" class="form-control" />
                <span asp-validation-for="ApartmentAddInformation.HouseNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentAddInformation.FlatNo" class="control-label"></label>
                <input asp-for="ApartmentAddInformation.FlatNo" class="form-control" />
                <span asp-validation-for="ApartmentAddInformation.FlatNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentAddInformation.FlatFloor" class="control-label"></label>
                <input asp-for="ApartmentAddInformation.FlatFloor" class="form-control" />
                <span asp-validation-for="ApartmentAddInformation.FlatFloor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentAddInformation.BuildingFloors" class="control-label"></label>
                <input asp-for="ApartmentAddInformation.BuildingFloors" class="form-control" />
                <span asp-validation-for="ApartmentAddInformation.BuildingFloors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentAddInformation.Area" class="control-label"></label>
                <input asp-for="ApartmentAddInformation.Area" class="form-control" />
                <span asp-validation-for="ApartmentAddInformation.Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyAddInformation" class="control-label"></label>
                <div>
                    @Html.DropDownListFor(x => x.ApartmentAddInformation.Company_Id, new SelectList(Model.Companies, "Id", "CompanyName"), new { multiple = "multiple", @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
